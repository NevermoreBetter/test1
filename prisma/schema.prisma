generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String      @id @default(cuid())
  name      String
  email     String   @unique
  dob       String
  createdAt DateTime @default(now())
  event     Event?   @relation(fields: [eventId], references: [id])
  eventId   String?
}

model Event {
  id           String      @id @default(cuid())
  title        String
  description  String
  time         DateTime
  organizer    String
  participants User[]
}
